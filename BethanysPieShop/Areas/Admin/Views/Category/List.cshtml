@using BethanysPieShop.ViewModels
@model AdminCategoriesListViewModel

  <h2>Categories</h2>
         
<form method="get" asp-controller="Category" asp-action="List">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" name="categoryName" value=""/>
            <span class="input-group-btn">
                <button type="submit" class="btn btn-outline-dark">
                    Search  
                </button>
            </span>
        </div>
    </div>
</form>

  @foreach (var category in Model.Categories)
  {
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@category.CategoryName</h3>
        </div>
        <div class="panel-body">
            <span>Description: @category.Description</span>
            <span hidden="hidden">Description: @category.CategoryId</span>
        </div>
        <div class="panel-footer flex-row">
            <a class="btn btn-lg" asp-controller="Category" asp-action="Detail" asp-route-categoryId="@category.CategoryId">
                <i class="glyphicon glyphicon-zoom-in"></i>
            </a>
            <a class="btn btn-lg" asp-controller="Category" asp-action="Edit" asp-route-CategoryId="@category.CategoryId">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
            <form asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.CategoryId"
                onclick="return confirm('Are you sure you want to delete @category.CategoryName?')">
                <button type="submit" class="btn btn-lg"><i class="glyphicon glyphicon-trash"></i></button>
            </form>
        </div>
    </div>      
  }
